%%%% フォントの設定（これがないとエラーが出たりする） %%%%
\usepackage[deluxe]{otf}
\usepackage{type1cm}
\renewcommand{\familydefault}{\sfdefault}
\renewcommand{\kanjifamilydefault}{\gtdefault}

%%%% いらないところを消す %%%%
\setbeamertemplate{navigation symbols}{}  % ナビゲーションシンボルを消す
\setbeamertemplate{footline}{}            % フッターを消す

%%%% ブロックのレイアウト設定 %%%%
\setbeamerfont{block title}{size=\LARGE}  % blockタイトルのフォントサイズを変更
\setbeamerfont{block body}{size=\Large}   % blockボディのフォントサイズを変更
\setbeamertemplate{block begin}{          % タイトルとボディのmargin, paddingを調整
  \vskip.5ex % margin top
  \begin{beamercolorbox}[rounded=true,shadow=false,leftskip=.8em,colsep*=.75ex]{block title} % title padding
    \usebeamerfont*{block title}\insertblocktitle
  \end{beamercolorbox}
  \usebeamerfont{block body}
  \begin{beamercolorbox}[rounded=true,shadow=false,leftskip=.2em,rightskip=.2em,colsep*=.75ex,sep=1ex,vmode]{block body} % body padding
}
\setbeamertemplate{block end}{
  \end{beamercolorbox}
  \vskip.7ex % margin bottom
}

%%%% 紙の上下左右の余白設定 %%%%
\setlength{\textwidth}{\paperwidth}    % 本文横幅を用紙の横サイズにする
\addtolength{\textwidth}{-2in}         % 左右の余白を左右合わせて2インチとする(2インチ引く)
\setlength{\textheight}{\paperheight}  % 本文縦幅を用紙の縦サイズにする
\addtolength{\textheight}{-2in}        % 上下の余白を左右合わせて2インチとする(2インチ引く)
\setlength{\topmargin}{0pt}            % ページ上端のマージンを消す
\addtolength{\topmargin}{-\headheight} % (ページ上端の余白)-(ヘッダーの高さ)
\addtolength{\topmargin}{-\headsep}    % (ページ上端の余白)-(ヘッダーと本文の余白)
\setlength{\oddsidemargin}{0pt}        % 奇数(右)ページの左マージンを消す
\setlength{\evensidemargin}{0pt}       % 偶数(左)ページの右マージンを消す